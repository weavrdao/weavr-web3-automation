{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "out",
        "sourceMap": true,
        "strict": false,
        "target": "es2019",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "**/*.spec.ts"
    ],
    "include": [
        "**/*"
    ]
}